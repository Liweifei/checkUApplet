.page-body {
  border-top: 1rpx solid #f6f6f6;
  min-height: 1334rpx;
  background-color: #fff;
}

.tabBox {
  height: 80rpx;
  border-bottom: 1rpx solid #f6f6f6;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  position: relative;
}

.tabBox>text {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  text-align: center;
  /* line-height: 76rpx; */
}

.tabBox>text.active {
  font-size: 32rpx;
  color: #60b17a;
}

.navbar {
  width: 80rpx;
  height: 4rpx;
  background-color: #60b17a;
  border-radius: 2rpx;
  position: absolute;
  top: 80rpx;
  left: 148rpx;
}

/* 内容区域 */

.contentBox {
  padding-left: 30rpx;
  box-sizing: border-box;
}

.headImg {
  width: 68rpx;
  height: 68rpx;
}

.dateBox {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  margin-left: 18rpx;
  border-radius: 50%;
}

.name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
  margin: 28rpx 0 40rpx 0;
}

.contentText {
  font-size: 26rpx;
  color: #999;
  width: 564rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 36rpx;
}

.triangle {
  width: 0;
  height: 0;
  border-width: 0 12rpx 18rpx;
  border-style: solid;
  border-color: transparent transparent #e9e9e9;
  position: absolute;
  top: -17rpx;
  left: 45rpx;
}
