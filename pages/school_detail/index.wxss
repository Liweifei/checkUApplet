/*school_detail.wxss*/

.page-body {
  width: 750rpx;
  background-color: #f5f5f5;
}

/* 轮播图 */

.swipeBox {
  height: 360rpx;
}

.infoBox {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.infoBox image {
  display: block;
  width: 100%;
  height: 360rpx;
}

.baseInfo {
  width: 100%;
  padding: 28rpx 0;
  background-color: #fff;
}

.operationBox {
  float: right;
  margin-right: 56rpx;
  font-size: 20rpx;
  color: #333;
}

.operationBox>view {
  display: inline-block;
  margin-top: 20rpx;
}

.collection {
  width: 130rpx;
  margin-right: 50rpx;
  text-align: center;
}

.collection image {
  display: block;
  width: 40rpx;
  height: 36rpx;
  margin: 0 auto 12rpx auto;
}

.conmment {
  display: inline-block;
}

.conmment image {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: 0 auto 12rpx auto;
}

.info {
  font-size: 28rpx;
  color: #999;
  float: left;
  margin-left: 30rpx;
}

.info>image {
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-right: 20rpx;
}

.info>text {
  display: block;
  width: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.name {
  color: #333;
  margin: 10rpx 0;
}

/* 内容 */

.contentBox {
  background-color: #fff;
  margin-top: 20rpx;
}

.title {
  padding-bottom: 32rpx;
}

.title_icon {
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  margin: 0 12rpx 0 -20rpx;
  background-color: #9f6bae;
  border-radius: 30rpx;
  vertical-align: middle;
}

.title>text {
  vertical-align: middle;
  font-size: 30rpx;
  color: #333;
}

.formContent {
  font-size: 26rpx;
  color: #333;
}

.formContent>view {
  margin-bottom: 24rpx;
}

.formContent text {
  color: #999;
  display: inline-block;
  margin-left: 30rpx;
}

.formContent text.online {
  color: #49b6ea;
}

.advantage {
  line-height: 1;
  vertical-align: top;
  display: inline-block;
  margin-top: 4rpx;
}

.advantageText {
  display: inline-block;
  width: 530rpx;
}

/* 评论区域 */

.commentator {
  width: 68rpx;
  height: 68rpx;
}

.pinglun {
  width: 32rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-top:-4rpx;
  margin-right: 8rpx;
}

.zan {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-top: -10rpx;
  margin-right: 8rpx;
}

.conmmentBox {
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 0;
}

.conmmentContent {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin: 28rpx 10rpx 36rpx 86rpx;
}

.conmmentPeople {
  color: #333;
  display: block;
  font-size: 26rpx
}

.rightBox {
  display: inline-block;
}

.rightBox>text {
  vertical-align: middle;
}

.imgBox {
  margin: 10rpx 0 36rpx 66rpx;
}

.imgBox>image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin: 10rpx 0 0 20rpx;
}

.scrollBottomTips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 40rpx 0 40rpx 0;
  background-color: #fff;
}

/* 评价 */
.star-image {
  width: 32rpx;
  height: 32rpx;
  padding-right: 12rpx;
}

.starBox {
  display: inline-block;
  margin-left: 20rpx;
}

.starBox>view {
  display: inline-block;
}
