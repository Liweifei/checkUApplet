/* 头像 */

.headTip {
  height: 248rpx;
  padding: 50rpx 0;
  box-sizing: border-box;
  font-size: 30rpx;
  position: relative;
}

.headTip image {
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  border-radius: 50%;
  margin-left: 30rpx;
  vertical-align: middle;
  position: absolute;
  z-index: 10;
}

.headTip image.bgImg {
  width: 750rpx;
  height: 248rpx;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 0;
  margin: 0;
}

.headTip .name {
  display: inline-block;
  color: #fff;
  font-size: 40rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  position: absolute;
  left: 210rpx;
  top: 100rpx;
  z-index: 10;
}

.headTip .setting {
  width: 32rpx;
  height: 30rpx;
  margin: 62rpx 0 0 0;
}

/* 列表 */

.list navigator:nth-of-type(3) {
  border: none;
}

.list navigator:nth-of-type(4) {
  border-top: 1px solid #ddd;
  border-bottom: none;
}

.list navigator {
  width: 100%;
  height: 128rpx;
  border-bottom: 1px solid #ddd;
  margin-left: 30rpx;
}

.list .icon {
  width: 36rpx;
  height: 36rpx;
  margin: 45rpx 26rpx 0 0rpx;
}

.list .iconGo {
  width: 12rpx;
  height: 22rpx;
  margin: 55rpx 52rpx 0 0;
}

.list navigator span {
  height: 128rpx;
  line-height: 128rpx;
  color: #333;
  font-size: 28rpx;
}

/* 切换中英文弹窗 */

.free-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.free-dialog__container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding-bottom:100rpx;
}

.free-dialog--show .free-dialog__container {
  transform: translateY(0);
}

.free-dialog--show .free-dialog__mask {
  display: block;
}

/*模态框中的内容*/

.free-button {
  display: inline-block;
  width: 50px;
  text-align: center;
  font-size: 20px;
  color: #707070;
  margin-bottom: 20px;
}

.free-dialog-submit {
  float: right;
  color: #48c23d;
}

radio-group {
  margin: 0 60rpx;
}

radio-group>label {
  display: block;
  border-bottom: 1px solid #ddd;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  color: #333;
}

radio-group>label:last-child {
  border-bottom: none;
}

.changeTitle {
  font-size: 32rpx;
  color: #333;
  height: 128rpx;
  border-bottom: 1px solid #ddd;
  padding-left: 30rpx;
  box-sizing: border-box;
}

radio {
  display: inline-block;
  transform: scale(0.7);
  margin-right: 20rpx;
}