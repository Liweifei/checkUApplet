.page-body {
  background: #fff;
  height: 1334rpx;
  border-top: 1rpx solid #f6f6f6;
}

/* tab */

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  display: inline-block;
  text-align: center;
  margin-right: 72rpx;
}

.nav-item:first-child {
  margin-left: 80rpx;
}

.nav-item.active {
  font-size: 32rpx;
  color: #60b17a;
  font-weight: bold;
}

.tab-box {
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.searchBox {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  border: 1px solid #e9e9e9;
  border-radius: 30rpx;
  margin: 30rpx;
  overflow: hidden;
}

.searchBox icon {
  margin: 14rpx 12rpx 0 20rpx;
  vertical-align: top;
}
.searchBox input {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #aaa;
  cursor: pointer;
}

/* 内容区域 */
.contentList {
  background: #fff;
  padding: 28rpx;
}
.contentList > view {
  margin-bottom: 20rpx
}
.schoolImg {
  width:260rpx;
  height:150rpx;
}
.schooldesc {
  margin-left: 20rpx;
  font-size: 28rpx
}
.schooldesc view:nth-child(2) {
  color: #999;
  margin: 10rpx 0 20rpx 0
}
.schooldesc view:nth-child(3) {
  color: #666;
  font-size:24rpx;
  width: 300rpx;
}
.schooldesc + view {
  margin: 28rpx 52rpx 0 0;
}