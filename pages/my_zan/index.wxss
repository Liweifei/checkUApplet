.page-body {
  border-top: 1rpx solid #f6f6f6;
  height: 1334rpx;
  background-color: #fff;
}

.bgImg {
  width: 750rpx;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.headBox {
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  top: 60rpx;
  left: 295rpx;
  z-index: 20;
  text-align: center;
}

.headBox>image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.contentBox {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: -35rpx;
}

.zanCount {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.zanCount>text {
  font-size: 40rpx;
  color: #60b17a;
  display: inline-block;
  margin: 0 5rpx;
}

.heartBox {
  width: 280rpx;
  height: 288rpx;
  margin: 0 auto 252rpx auto;
}

/* 无数据显示 */
.noDataBox {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.noDataBox>image {
  display: block;
  width: 374rpx;
  height: 300rpx;
  margin: 280rpx auto 100rpx auto;
}