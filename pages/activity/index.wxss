/**activity.wxss**/
.container {
  height: 1334rpx;
  background-color: #fff;
}

.contentContainer {
  width: 100%;
  overflow: hidden;
  border-top: 1px solid #e9e9e9;
}

.searchBox {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  border: 1px solid #e9e9e9;
  border-radius: 30rpx;
  margin: 30rpx;
  overflow: hidden;
}

.searchBox icon {
  margin: 14rpx 12rpx 0 20rpx;
  vertical-align: top;
}
.searchBox input {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #aaa;
  cursor: pointer;
}

.selectContent {
  width: 750rpx;
  height: 924rpx;
  background-color: #fff;
  margin-top: 90rpx;
  font-size: 28rpx;
  color: #333;
}

.selectContent>view {
  float: left;
  text-align: center;
  margin-bottom: 60rpx;
  margin: 0 0 60rpx 30rpx;
}

.selectContent>view:nth-child(1),
.selectContent>view:nth-child(3) {
  margin-left: 40rpx;
}

.selectContent image {
  display: block;
  width: 320rpx;
  height: 180rpx;
  margin-bottom: 12rpx;
}
