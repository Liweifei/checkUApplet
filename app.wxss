/**app.wxss**/
@import 'static/style/weui.wxss';

page {
  background-color: #f5f5f5;
  font-size: 16px;
  color: #333;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.clear:after {
  display: block;
  content: '';
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

/* weui */

.weui-navbar__item.weui-bar__item_on {
  color: #60b17a;
  font-size: 32rpx;
}

.weui-navbar__slider {
  background-color: #60b17a;
  border-radius: 2rpx;
  width: 80rpx;
  height: 4rpx;
}

.weui-navbar__title {
  color: #333;
  font-size: 26rpx;
}

.weui-navbar__item.weui-bar__item_on .weui-navbar__title {
  color: #60b17a;
  font-size: 32rpx;
  font-weight: bold;
}

.weui-uploader__file {
  margin-top: 10px;
}

.weui-uploader__input-box {
  width: 60px;
  height: 60px;
  border: 1px dashed #bcbcbc;
  margin: 10px;
}

.weui-uploader__img {
  width: 60px;
  height: 60px;
  margin: 0 0rpx 10rpx 25rpx;
}

.weui-uploader__bd {
  margin-bottom: 10px;
  margin-top: 10px;
}

.weui-navbar__title {
  font-size: 16px;
}
